<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/settings_title">
    
    <!-- Dialer Settings -->
    <Preference
        android:key="dialer_category"
        android:title="@string/dialer_title"
        android:fragment="com.sosp.settings.fragments.SospDialerSettings"/>

    <!-- Gesture Settings -->
    <Preference
        android:key="gestures_category"
        android:title="@string/gestures_title"
        android:fragment="com.sosp.settings.fragments.SospGesturesSettings"/>
        
    <!-- Statusbar Settings -->
    <Preference
        android:key="statusbar_category"
        android:title="@string/statusbar_title"
        android:fragment="com.sosp.settings.fragments.SospStatusbarSettings"/>

</PreferenceScreen>
